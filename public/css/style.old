:root {
--bg: #0b0c10;
--panel: #15171c;
--text: #e6edf3;
--muted: #9aa4af;
--accent: #4f9cff;
--danger: #ff5c5c;
}
* { box-sizing: border-box; }
body { margin: 0; font-family: system-ui, -apple-system, Segoe UI, Roboto, Ubuntu, Cantarell, Noto Sans, Arial, "Apple Color Emoji", "Segoe UI Emoji"; background: var(--bg); color: var(--text); }
.container { max-width: 920px; margin: 0 auto; padding: 1rem; }
header h1 { font-size: 1.6rem; }
.card { background: var(--panel); padding: 1rem; border-radius: 12px; box-shadow: 0 4px 24px rgba(0,0,0,0.25); margin-bottom: 1rem; }
label { display: block; margin: 0.6rem 0; }
input[type="text"], textarea, select { width: 100%; padding: 0.6rem; border-radius: 8px; border: 1px solid #2a2f37; background: #0f1116; color: var(--text); }
button { padding: 0.6rem 1rem; border: none; border-radius: 8px; background: var(--accent); color: white; cursor: pointer; }
button.danger { background: var(--danger); }
button[disabled] { opacity: 0.5; cursor: not-allowed; }
.row { display: flex; gap: 0.5rem; }
.post { padding: 1rem; border-bottom: 1px solid #22262e; }
.post h2 { margin: 0 0 0.25rem 0; font-size: 1.3rem; }
.post time { color: var(--muted); font-size: 0.85rem; }
.post .content { margin-top: 0.6rem; }
.muted { color: var(--muted); }
.file-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(220px, 1fr)); gap: 0.5rem; margin-top: 0.5rem; }
.file { background: #0f1116; border: 1px solid #22262e; border-radius: 8px; padding: 0.6rem; }
.file .name { font-weight: 600; }
.file .url { font-size: 0.85rem; color: var(--muted); word-break: break-all; }
.file .actions { margin-top: 0.4rem; display: flex; gap: 0.4rem; flex-wrap: wrap; }